<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#003A5A" android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <TextView
            android:id="@+id/domainNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Domeniu Schiabil"
            android:textColor="#87CEFA"
            android:textSize="24sp"
            android:textStyle="italic"
            android:background="#111111"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Container pentru tipuri de bilete generate dinamic -->
        <LinearLayout
            android:id="@+id/ticketTypeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="8dp" />

        <!-- Buton Înapoi -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Înapoi"
            android:background="#AAAAAA"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>