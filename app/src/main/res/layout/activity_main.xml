<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003A5A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Meniu sus -->
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#01579B"
            android:padding="16dp">

            <LinearLayout
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#FF9800">

                <Button
                    android:id="@+id/homeButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Mai Multe"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:background="#4CAF50">

                <Button
                    android:id="@+id/ticketsButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Biletele mele"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#2196F3">

                <Button
                    android:id="@+id/infoButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/informa_iii"
                    android:textColor="#FFFFFF"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

        <!-- Info utilizator -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nume_prenume1"
            android:textColor="#BBDEFB"
            android:textSize="22sp"
            android:paddingTop="16dp" />

        <TextView
            android:id="@+id/lastSyncTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/ultima_sincronizare_zz_ll_aaaa_ora_mm_sss"
            android:textColor="#AAAAAA"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_marginBottom="10dp"

            app:srcCompat="@drawable/fede_wenzel_tronador_mountain_glacier_bariloche" />

        <!-- Status skipass -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="#01579B">

            <TextView
                android:id="@+id/skipassStatusTitle"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_height="48dp"
                android:text="@string/status_skipass1"
                android:textColor="#BBDEFB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/skipassCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_skipass_uri_active"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Meniu rapid -->
        <TextView
            android:id="@+id/quickMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meniu_rapid"
            android:textColor="#BBDEFB"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <Button
            android:id="@+id/buySkipassButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0288D1"
            android:text="@string/cump_r_skipass"
            android:textColor="#000000" />

        <Button
            android:id="@+id/openCartButton"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="16dp"
            android:background="#FF9800"
            android:text="ðŸ›’CoÈ™ de CumpÄƒrÄƒturiðŸ›’"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />


        <Button
            android:id="@+id/transactionHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#0288D1"
            android:text="@string/istoric_tranzac_ii"
            android:textColor="#000000"
            tools:ignore="VisualLintButtonSize" />

        <!-- Logo (placeholder fÄƒrÄƒ imagine) -->
        <TextView
            android:layout_width="364dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:drawableTopCompat="@drawable/logoskiket" />
    </LinearLayout>
</ScrollView>
