<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003A5A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Meniu sus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:background="#01579B"
            android:padding="16dp">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Acasă"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"
                /> <!-- Înlocuiește cu un icon existent -->

            <Button
                android:id="@+id/ticketsButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Bilete"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/infoButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Informații"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Informații utilizator -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Nume Prenume"
            android:textColor="#BBDEFB"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/lastSyncTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Ultima sincronizare: ZZ.LL.AAAA Ora:MM:SS"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <!-- Status skipass -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#07549B">

            <ImageView
                android:id="@+id/skipassIcon"
                android:layout_width="36dp"
                android:layout_height="36dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/skipassStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status skipass"
                    android:textColor="#BBDEFB"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/skipassCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 skipass-uri active"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Meniu rapid -->
        <TextView
            android:id="@+id/quickMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meniu rapid"
            android:textColor="#BBDEFB"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <Button
            android:id="@+id/buySkipassButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cumpără skipass"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:backgroundTint="#0288D1"
            /> <!-- Icon propriu -->

        <Button
            android:id="@+id/transactionHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Istoric tranzacții"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:backgroundTint="#0288D1"
            /> <!-- Icon propriu -->

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="225dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:src="@drawable/logoskiket" /> <!-- Asigură-te că ai logoul în /drawable -->

    </LinearLayout>
</ScrollView>
