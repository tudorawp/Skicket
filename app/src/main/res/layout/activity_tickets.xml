<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#003A5A"
    android:padding="16dp">

    <!-- Toolbar cu buton back -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ÃŽnapoi"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/biletele_mele1"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <!-- Mesaj temporar -->
    <TextView
        android:id="@+id/temporaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aceasta_este_o_sec_iune_temporar"
        android:textColor="#BBDEFB"
        android:textSize="20sp"
        android:gravity="center"
        android:drawablePadding="16dp"
        app:drawableTopCompat="@drawable/ic_ski"
        android:padding="8dp" />

    <!-- Bilet (card simplu) -->
    <LinearLayout
        android:id="@+id/ticketCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#01579B"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/ticketTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skipass_poiana_bra_ov"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ticketDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_11_mai_2025"
            android:textColor="#BBDEFB"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/ticketType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_1_zi_adult"
            android:textColor="#BBDEFB"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/ticketStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/status_activ"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

</LinearLayout>
